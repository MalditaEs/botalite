{% block body %}
    {% block header %}
        <section
                class="relative bg-cover bg-center bg-no-repeat pt-4 bg-gradient-to-r from-[#00c4cc] to-[#00bdd9] flex justify-center">
            <div class="max-w-7xl z-20">

